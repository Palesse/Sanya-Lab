#include<stdio.h>
#include<locale.h>

int main(void) {

	setlocale(LC_ALL, "Russian");

	int d;


	printf("Введите номер дня недели \n");
	scanf_s("%d", &d);

	switch (d) {
	case 1:
		printf("Понедельник \n");
		break;
	case 2:
		printf("Вторник \n");
		break;
	case 3:
		printf("Среда \n");
		break;
	case 4:
		printf("Четверг \n");
		break;
	case 5:
		printf("Пятница \n");
		break;
	case 6:
		printf("Суббота \n");
		break;
	case 7:
		printf("Воскресенье \n");
		break;
	default: printf("Неправильно введены данные \n");
	}

	return 0;
}
